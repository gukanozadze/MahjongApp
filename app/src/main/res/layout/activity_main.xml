<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#915D5D"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".MainActivity">
    <TableLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tableLayout">

        <TableRow

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:contentDescription="unopened"
                    android:onClick="clicked"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/question_mark_icon"
                    android:id="@+id/imageView_1"/>
            <ImageView
                    android:contentDescription="unopened"
                    android:onClick="clicked"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/question_mark_icon"
                    android:id="@+id/imageView_2"/>
            <ImageView
                    android:contentDescription="unopened"
                    android:onClick="clicked"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/question_mark_icon"
                    android:id="@+id/imageView_3"/>
            <ImageView
                    android:contentDescription="unopened"
                    android:onClick="clicked"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/question_mark_icon"
                    android:id="@+id/imageView_4"/>
        </TableRow>
        <TableRow

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:contentDescription="unopened"
                    android:onClick="clicked"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/question_mark_icon"
                    android:id="@+id/imageView_5"/>
            <ImageView
                    android:contentDescription="unopened"
                    android:onClick="clicked"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/question_mark_icon"
                    android:id="@+id/imageView_6"/>
            <ImageView
                    android:contentDescription="unopened"
                    android:onClick="clicked"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/question_mark_icon"
                    android:id="@+id/imageView_7"/>
